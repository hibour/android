    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.Splash"
            android:label="@string/app_name"
            android:theme="@style/LauncherTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/FullScreenTheme" >
        </activity>
        <activity
            android:name=".activities.GovtProof"
            android:label="@string/title_activity_govt_proof"
            android:theme="@style/BrandTheme" >
        </activity>
        <activity
            android:name=".activities.SocialCategories"
            android:label="@string/title_activity_social_categories" >
        </activity>
        <activity
            android:name=".activities.ChooseLocation"
            android:label="@string/title_activity_choose_location" >
        </activity>
    </application>

</manifest>

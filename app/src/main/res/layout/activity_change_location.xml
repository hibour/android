<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/changelocation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/change_location_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/ic_back_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/loc_search_rectangle"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:id="@+id/loc_search_icon"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/location_icon"/>

            <AutoCompleteTextView
                android:id="@+id/loc_search_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/loc_locality"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/edit_text_size"/>
        </RelativeLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/changelocation_layout"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/activity_horizontal_margin"></WebView>

    <RelativeLayout
        android:id="@+id/location_button_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/serach_sumbit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/brand"
            android:text="Update to your Location"
            android:textColor="@color/white"
            android:textSize="@dimen/text_Size_level5"/>

        <com.dsquare.hibour.utils.Avenir
            android:id="@+id/loc_members_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/serach_sumbit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_level4"/>
    </RelativeLayout>
</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
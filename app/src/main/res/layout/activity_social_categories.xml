        <com.dsquare.hibour.utils.Avenir
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/social_text"
            android:gravity="center"
            android:text="@string/socialize_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/extended_tool_bar_text_size"
            android:layout_below="@+id/socialize_search_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20" />

        <android.support.v7.widget.RecyclerView
            android:scrollbars="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/social_prefs_list"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/social_text"
            android:layout_above="@id/socialize_button_bar">
        </android.support.v7.widget.RecyclerView>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.dsquare.hibour.activities.SocialCategories">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/socialize_toolbar"
            android:background="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/lll"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/socialize_toolbar"
            android:id="@+id/socialize_search_bar"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/loc_search_rectangle">
            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/search_rect"
                android:id="@+id/home_searchbar_layout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_search_white"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/home_searchbar_layout"
                android:hint="Search"
                android:gravity="center"
                android:cursorVisible="false"
                android:textCursorDrawable="@null"
                android:id="@+id/search_box"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_large_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:id="@+id/socialize_button_bar">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/socialize_prev_button"
                android:background="@color/black_button"
                android:text="@string/govt_skip_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brand"
                android:id="@+id/socialize_done_button"
                android:text="@string/done_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>
        </LinearLayout>




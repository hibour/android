<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.dsquare.hibour.activities.Profile">

    <RelativeLayout
        android:id="@+id/messages_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white">

        <com.dsquare.hibour.utils.Proxima
            android:id="@+id/profile_back_text"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:text="@string/back_text"
            android:textSize="@dimen/text_size_level2"/>

        <com.dsquare.hibour.utils.ProximaExtraBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/profile_text"
            android:textColor="@color/brand"
            android:textSize="@dimen/app_bar_title_text_size"/>

        <RelativeLayout
            android:id="@+id/nav_drawer_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bottom_line_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/common_action_bar_splitter"/>

        <com.dsquare.hibour.utils.Proxima
            android:id="@+id/profile_settings_text"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/action_settings"
            android:textSize="@dimen/text_size_level2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.dsquare.hibour.dialogs.RoundImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/avatar"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_1"
        android:textSize="@dimen/text_size_level2"/>

    <Button
        android:id="@+id/profile_send_msg_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/brand"
        android:text="@string/profile_send_msg_text"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <com.dsquare.hibour.utils.Proxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_interests_text"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_level3"/>

        <com.dsquare.hibour.utils.Proxima
            android:id="@+id/profile_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_level4"/>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/socialize_toolbar"
                android:background="@color/brand">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_back_white"
                    android:id="@+id/socillize_menu_icon"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"/>
                <com.dsquare.hibour.utils.ProximaExtraBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_social_categories"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/app_bar_title_text_size"/>


                <ImageView
                    android:id="@+id/home_search_icon"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_3"
                    android:src="@mipmap/ic_search_white"/>

                <LinearLayout
                    android:id="@+id/messages_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/newbrand"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/navigation_back"
                        android:layout_width="?android:actionBarSize"
                        android:layout_height="?android:actionBarSize"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/ic_back_white"/>

                    <RelativeLayout
                        android:id="@+id/home_search_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_50"
                        android:background="@drawable/loc_search_rectangle"
                        android:gravity="center"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/home_search_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="search posts"
                            android:textColor="@color/black_1"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/edit_text_size"/>

                        <ImageView
                            android:layout_width="?android:actionBarSize"
                            android:layout_height="?android:actionBarSize"
                            android:layout_alignParentRight="true"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/dp_5"
                            android:src="@mipmap/ic_search_red_icon"/>
                    </RelativeLayout>

                </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/socialize_toolbar"
            android:id="@+id/socialize_search_bar"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/loc_search_rectangle"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/search_rect"
                android:id="@+id/home_searchbar_layout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_search_white"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/home_searchbar_layout"
                android:hint="Search"
                android:gravity="center"
                android:cursorVisible="false"
                android:textCursorDrawable="@null"
                android:id="@+id/search_box"
                />
        </RelativeLayout>


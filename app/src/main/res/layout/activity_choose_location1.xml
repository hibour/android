<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dsquare.hibour.activities.ChooseLocation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/location_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/extended_toolbar_height"
            android:background="@color/brand">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/loc_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/extended_tool_bar_text_size"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/location_button_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_large_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/location_prev_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_button"
                android:text="@string/govt_prev_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/location_next_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brand"
                android:text="@string/govt_next_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/location_button_bar"
            android:layout_below="@id/location_toolbar">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.dsquare.hibour.activities.ChooseLocation"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/loc_location_display_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loc_current_loc_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"/>

                    <TextView
                        android:id="@+id/loc_curr_loc_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_above="@id/loc_location_display_layout"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/fab_govt_left_margin"
                    android:layout_marginRight="@dimen/fab_govt_left_margin"
                    android:background="@drawable/loc_search_rectangle">

                    <ImageView
                        android:id="@+id/loc_search_icon"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_search_black"/>

                    <ImageView
                        android:id="@+id/loc_heart_icon"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/ic_loc_heart_red"/>

                    <AutoCompleteTextView
                        android:id="@+id/loc_search_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/loc_heart_icon"
                        android:layout_toRightOf="@id/loc_search_icon"
                        android:gravity="center"
                        android:hint="@string/loc_search_text"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/edit_text_size"/>
                </RelativeLayout>
            </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/fab_govt_radius"
        android:layout_height="@dimen/fab_govt_radius"
        android:layout_marginLeft="@dimen/fab_govt_left_margin"
        android:layout_marginTop="@dimen/fab_govt_top_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_loc"
        app:backgroundTint="@android:color/white">
    </android.support.design.widget.FloatingActionButton>

</FrameLayout>

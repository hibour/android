<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context="com.dsquare.hibour.activities.ChooseLocation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/location_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/lll"/>

            <Button
                android:id="@+id/places_signup"
                android:layout_width="50dp"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/brand"
                android:text="@string/signin_button"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

            <!--<com.dsquare.hibour.utils.Avenir-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="@string/loc_text"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="@dimen/extended_tool_bar_text_size"/>-->
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/location_toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/loc_map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    >
                    <!-- <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:tools="http://schemas.android.com/tools"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:id="@+id/map"
                         tools:context="com.dsquare.hibour.activities.ChooseLocation"
                         android:name="com.google.android.gms.maps.SupportMapFragment" />-->
                    <WebView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></WebView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/loc_location_display_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:orientation="horizontal">
                            <com.dsquare.hibour.utils.Avenir
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loc_current_loc_text"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp_16"/>
                            <com.dsquare.hibour.utils.Avenir
                                android:id="@+id/loc_curr_loc_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp_16"/>
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/location_button_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loc_map_layout"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.dsquare.hibour.utils.Avenir
                        android:id="@+id/loc_members_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="There are 200 people joined from this area"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/text_size_level4"/>
                    <com.dsquare.hibour.utils.Avenir
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="--- QUICKLY CONNECT WITH ---"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_Size_level5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        >

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/facebook_login_button"
                            xmlns:facebook="http://schemas.android.com/apk/res-auto"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="Sign in"
                            facebook:com_facebook_login_text="LOGIN"
                            />

                        <com.google.android.gms.common.SignInButton
                            android:id="@+id/btn_sign_in"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"/>

                    </LinearLayout>

                    <com.dsquare.hibour.utils.Avenir
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="--- OR USE YOUR EMAIL ---"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_Size_level5"/>
                    <Button
                        android:id="@+id/location_next_button"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/brand"
                        android:gravity="center"
                        android:text="@string/signup_button"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/button_text_size"/>
                </LinearLayout>

                </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/entire_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/adapter_neighbours_image"
            android:layout_width="@dimen/comments_icon_size"
            android:layout_height="@dimen/comments_icon_size"
            android:src="@drawable/avatar1"/>

        <com.dsquare.hibour.utils.Avenir
            android:id="@+id/last_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="11:35 pm"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_size_level7"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/last_msg_time"
            android:layout_toRightOf="@id/adapter_neighbours_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <com.dsquare.hibour.utils.Avenir
                    android:id="@+id/adapter_neighbours_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Ashok Madduru"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/text_size_level3"/>

                <com.dsquare.hibour.utils.Avenir
                    android:id="@+id/last_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="last message"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/text_Size_level5"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray"/>
</LinearLayout>
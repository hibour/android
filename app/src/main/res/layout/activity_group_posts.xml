<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.dsquare.hibour.activities.GroupPosts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/app_bar_icon_sizem"
            android:layout_height="@dimen/app_bar_icon_sizem"
            android:src="@mipmap/ic_back_gray"
            android:padding="@dimen/app_bar_icon_padding1"
            android:id="@+id/group_posts_back_icon"
            android:layout_centerVertical="true"/>
        <com.dsquare.hibour.utils.Avenir
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Bhanu Elite"
            android:textColor="@color/brand"
            android:textSize="@dimen/app_bar_title_text_size"
            android:id="@+id/group_posts_group_name"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_white"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:id="@+id/chats_search_icon"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bottom_line_height"
            android:background="@color/common_action_bar_splitter"
            android:id="@+id/nav_drawer_bottom_line"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:scrollbars="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/group_posts_list">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dsquare.hibour.fragments.AboutUs">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/white"
            android:id="@+id/about_us_app_bar">
            <ImageView
                android:layout_width="@dimen/app_bar_icon_size"
                android:layout_height="@dimen/app_bar_icon_size"
                android:src="@drawable/ic_menu_white"
                android:id="@+id/about_us_menu_icon"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"/>
            <com.dsquare.hibour.utils.ProximaExtraBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_hibour"
                android:textColor="@color/brand"
                android:layout_centerInParent="true"
                android:textSize="@dimen/app_bar_title_text_size"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_bottom_line_height"
                android:background="@color/common_action_bar_splitter"
                android:id="@+id/nav_drawer_bottom_line"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_3"
                android:src="@drawable/ic_notification_gray"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:id="@+id/about_us_notif_icon"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/about_us_app_bar">
            <com.dsquare.hibour.utils.Avenir
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_Size_level5"
                android:textColor="@color/black_1"
                android:id="@+id/about_us_text"
                android:layout_marginTop="@dimen/dp_20"/>
            </ScrollView>


    </RelativeLayout>



</FrameLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dsquare.hibour.fragments.Home">

    <LinearLayout
        android:id="@+id/home_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_menu_icon"
            android:layout_width="@dimen/app_bar_icon_size"
            android:layout_height="@dimen/app_bar_icon_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:contentDescription="Menu opening icon"
            android:src="@drawable/ic_menu_white" />

        <com.dsquare.hibour.utils.ProximaExtraBold
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/home_fragment_title"
            android:textColor="@color/brand"
            android:textSize="@dimen/app_bar_title_text_size" />

        <ImageView
            android:id="@+id/home_search_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ic_search_white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/horiz_line_height"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gray"
        android:layout_below="@+id/home_app_bar"/>

    <LinearLayout
        android:id="@+id/home_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/horiz_line_height"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/home_suggestion_icon"
                android:layout_width="@dimen/app_bar_icon_size"
                android:layout_height="@dimen/app_bar_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/feed" />

            <ImageView
                android:id="@+id/home_posts_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/suggestions" />

            <View
                android:id="@+id/dummy_view"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/home_classifieds_icon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/socialize" />
            <ImageView
                android:id="@+id/home_socialize_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_notification_gray" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_bottom_menu"
        android:layout_below="@id/home_app_bar" />
    <ImageView
        android:id="@+id/home_new_post"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/post" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsquare.hibour.activities.SearchInFeeds">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/newbrand"
        android:id="@+id/feeds_search_app_bar">
        <ImageView
            android:layout_width="@dimen/app_bar_icon_size"
            android:layout_height="@dimen/app_bar_icon_size"
            android:src="@mipmap/ic_back_gray"
            android:id="@+id/feeds_search_back"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/loc_search_rectangle"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_centerInParent="true"
            android:id="@+id/home_search_layout">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:hint="search posts"
                android:textColor="@color/black_1"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/edit_text_size"
                android:id="@+id/home_search_autocomplete"
                android:background="@null"
                android:gravity="center"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_white"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:id="@+id/feeds_search_icon"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/horiz_line_height"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray"
            android:id="@+id/posts_appbar_line"
            android:layout_below="@+id/feeds_search_app_bar"/>

    <android.support.v7.widget.RecyclerView
        android:scrollbars="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feeds_search_list"
        android:layout_below="@id/posts_appbar_line">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/phone_toolbar"
        android:background="@color/white">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/log"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/business_linear"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:textSize="@dimen/edit_text_size"
            android:id="@+id/business_services_types"
            android:prompt="@string/govt_gender_text">
        </Spinner>
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/business_services_types_image_dropdown"
            android:src="@mipmap/ic_expandaple"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_bottom_line_height"
        android:background="@color/gray"
        android:layout_marginTop="-5dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:textSize="@dimen/edit_text_size"
            android:id="@+id/business_services_shops"
            android:prompt="@string/govt_card_name_text">
        </Spinner>
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/business_services_shops_image_dropdown"
            android:src="@mipmap/ic_expandaple"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_bottom_line_height"
        android:background="@color/gray"
        android:layout_marginTop="-5dp"></View>

        <Button
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:background="@color/brand"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/phone_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/business_services_submit"
            />


    </LinearLayout>
</LinearLayout>
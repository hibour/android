<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:id="@+id/nav_drawer_row_layout"
        android:visibility="gone"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_drawer_row_height"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/nav_item_icon"
                android:layout_width="@dimen/app_bar_icon_size_sm"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:layout_centerVertical="true" />

            <com.dsquare.hibour.utils.Proxima
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_item_text"
                android:layout_centerInParent="true"
                android:textColor="@color/black_2"
                android:layout_toRightOf="@+id/nav_item_icon"
                android:text="MESSAGES"
                android:textSize="@dimen/nav_drawer_row_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bottom_line_height"
            android:background="@color/brand"
            android:id="@+id/nav_drawer_bottom_line"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@android:color/white"
            android:id="@+id/nav_drawer_bottom_line1"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_100"
        android:id="@+id/nav_bottom_layout"
        android:visibility="gone"
        android:layout_height="@dimen/nav_bottom_line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/nav_logout_layout"
        android:visibility="gone"></RelativeLayout>
</LinearLayout>

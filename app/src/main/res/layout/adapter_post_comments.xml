<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_5"
              android:layout_marginRight="@dimen/dp_5"
    android:background="@android:color/white"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <ImageView
            android:id="@+id/adapter_comments"
            android:layout_width="@dimen/comments_icon_size"
            android:layout_height="@dimen/comments_icon_size"
            android:src="@drawable/avatar1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/adapter_comments"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10">
                <com.dsquare.hibour.utils.Avenir
                    android:id="@+id/adapter_comments_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashok Madduru"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/text_size_level3"/>
                <com.dsquare.hibour.utils.Avenir
                    android:id="@+id/adapter_comments_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2 Jan 2016"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_Size_level5"/>
            </RelativeLayout>
            <com.dsquare.hibour.utils.Avenir
                android:id="@+id/comments_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Hey its nice"
                android:textColor="@color/black_2"
                android:textSize="@dimen/text_Size_level5"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray"/>
</LinearLayout>
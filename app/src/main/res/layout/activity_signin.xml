<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dsquare.hibour.activities.SignIn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/lll"/>

            </RelativeLayout>
    <ScrollView
        android:id="@+id/signin_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/signin_icons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/signin_first_icon"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:src="@drawable/avatar1"/>
                <ImageView
                    android:id="@+id/signin_second_icon"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:src="@drawable/avatar2"/>
                <ImageView
                    android:id="@+id/signin_third_icon"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:src="@drawable/avatar3"/>
                <ImageView
                    android:id="@+id/signin_fourth_icon"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_weight="1"
                    android:src="@drawable/avatar4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30">
                <com.dsquare.hibour.utils.Avenir
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_text1"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/text_size_level3"/>
                <com.dsquare.hibour.utils.Avenir
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/signup_text2"
                    android:textColor="@color/brand"
                    android:textSize="@dimen/text_size_level3"/>
                <com.dsquare.hibour.utils.Avenir
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/signup_text3"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/text_size_level3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_40"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signin_mail_inputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    app:hintTextAppearance="@style/ThemeTextInputLayout">
                    <EditText
                        android:id="@+id/signin_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/signup_email_hint"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/black_1"
                        android:textColorHint="@color/gray"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_bottom_line_height"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray"></View>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signin_password_inputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    app:hintTextAppearance="@style/ThemeTextInputLayout">
                    <EditText
                        android:id="@+id/signin_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/signup_password_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/black_1"
                        android:textColorHint="@color/gray"/>
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_bottom_line_height"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray"></View>

            </LinearLayout>
            <Button
                android:id="@+id/signin_button"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/brand"
                android:text="@string/signin_button"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                >

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook_login_button"
                    xmlns:facebook="http://schemas.android.com/apk/res-auto"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="Sign in"
                    facebook:com_facebook_login_text="LOGIN"
                    />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <com.dsquare.hibour.utils.Avenir
                android:id="@+id/signin_signup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/signin_signup_text"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_Size_level5"/>
            <com.dsquare.hibour.utils.Avenir
                android:id="@+id/signin_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/signup_terms_text"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_Size_level5"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

</FrameLayout>
</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/govt_proof_toolbar"
        android:background="@color/brand">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/logo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_googleplaces"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.dsquare.hibour.utils.Avenir
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_googleplace"
            android:textSize="@dimen/dp_20"
            android:layout_marginLeft="@dimen/fab_govt_left_margin"
            android:layout_marginRight="@dimen/fab_govt_left_margin"
            android:layout_gravity="center"
            android:textColor="@color/black_1"
          />
        <com.dsquare.hibour.utils.Avenir
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_neighborhood"
            android:textSize="@dimen/dp_20"
            android:layout_marginLeft="@dimen/fab_govt_left_margin"
            android:layout_marginRight="@dimen/fab_govt_left_margin"
            android:layout_gravity="center"
            android:textColor="@color/black_1"
            android:layout_marginBottom="@dimen/dp_30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:orientation="vertical"
            android:background="@color/black_1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/loc_search_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_above="@id/loc_location_display_layout"
                >

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_location_icon"
                    android:id="@+id/loc_search_icon"/>
                <!--<ImageView-->
                    <!--android:layout_width="@dimen/dp_30"-->
                    <!--android:layout_height="@dimen/dp_30"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="@dimen/dp_10"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:src="@drawable/ic_loc_heart_red"-->
                    <!--android:id="@+id/loc_heart_icon"/>-->
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignLeft="@+id/ic_location_icon"
                    android:layout_marginRight="@dimen/dp_30"
                    android:hint="@string/loc_locality"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/edit_text_size"
                    android:id="@+id/loc_search_autocomplete"
                    android:background="@null"
                    android:gravity="center"/>
            </RelativeLayout>

            <Button
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:background="@color/brand"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/loc_search_text"
                android:textColor="@color/white"
                android:id="@+id/places_search"
                />

        </LinearLayout>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/dp_40"
            android:textColor="@color/white"
            android:background="@color/brand"
            android:text="@string/signin_button"
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/places_signup"/>


    </LinearLayout>


</LinearLayout>
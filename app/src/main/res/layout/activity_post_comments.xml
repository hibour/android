<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dsquare.hibour.activities.PostComments">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/comments_top_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:id="@+id/comments_bacl_icon"
                    android:layout_width="@dimen/comments_icon_size"
                    android:layout_height="@dimen/comments_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/ic_back_gray"/>
                <!-- <ImageView
                     android:layout_height="@dimen/comments_icon_size"
                     android:layout_width="@dimen/comments_icon_size"
                     android:layout_marginLeft="@dimen/activity_horizontal_margin"
                     android:src="@drawable/ic_thumb_up"
                     android:layout_toRightOf="@id/comments_bacl_icon"
                     android:layout_centerVertical="true"
                     android:id="@+id/comments_like_icon"/>
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_centerVertical="true"
                     android:id="@+id/comments_likes_layout"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/comments_like_icon">
                     <ImageView
                         android:layout_width="@dimen/app_bar_icon_size"
                         android:layout_height="@dimen/app_bar_icon_size"
                         android:src="@drawable/ic_send_black"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="@dimen/dp_5"
                         android:id="@+id/comments_post_icon"
                         android:layout_alignParentRight="true"/>
                     <com.dsquare.hibour.utils.Avenir
                         android:text=""
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black_1"
                         android:layout_toLeftOf="@id/comments_post_icon"
                         android:id="@+id/comments_likes_text"
                         android:layout_alignParentLeft="true"
                         android:textSize="@dimen/text_size_level4"
                         android:layout_marginTop="@dimen/dp_20"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/dp_10"/>

                     </RelativeLayout>
 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comments_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_alignParentBottom="true"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/gray"/>

                <com.dsquare.hibour.utils.ProximaEditText
                    android:id="@+id/comments_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:hint="Write here..."
                    android:isScrollContainer="true"/>
                    <Button
                        android:id="@+id/comments_sumbit"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/brand"
                        android:text="send"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/comments_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comments_top_layout"
                android:orientation="vertical">

                <com.dsquare.hibour.utils.Proxima
                    android:id="@+id/comments_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:text=""/>

                <ImageView
                    android:id="@+id/comments_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/feeds_image_height"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:adjustViewBounds="true"
                    android:elevation="@dimen/dp_2"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_post_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/comments_bottom_layout"
                android:layout_below="@id/comments_post"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/no_comments_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/comments_bottom_layout"
                android:layout_below="@id/comments_post"
                android:visibility="gone">

                <com.dsquare.hibour.utils.ProximaLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Be the first one to comment on this..."
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/text_size_level2"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

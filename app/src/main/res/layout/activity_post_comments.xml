<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.dsquare.hibour.activities.PostComments">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:id="@+id/comments_top_layout">
                <ImageView
                    android:layout_height="@dimen/comments_icon_size"
                    android:layout_width="@dimen/comments_icon_size"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/ic_back_gray"
                    android:layout_centerVertical="true"
                    android:id="@+id/comments_bacl_icon"/>
               <!-- <ImageView
                    android:layout_height="@dimen/comments_icon_size"
                    android:layout_width="@dimen/comments_icon_size"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_thumb_up"
                    android:layout_toRightOf="@id/comments_bacl_icon"
                    android:layout_centerVertical="true"
                    android:id="@+id/comments_like_icon"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:id="@+id/comments_likes_layout"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/comments_like_icon">
                    <ImageView
                        android:layout_width="@dimen/app_bar_icon_size"
                        android:layout_height="@dimen/app_bar_icon_size"
                        android:src="@drawable/ic_send_black"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_5"
                        android:id="@+id/comments_post_icon"
                        android:layout_alignParentRight="true"/>
                    <com.dsquare.hibour.utils.Avenir
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_toLeftOf="@id/comments_post_icon"
                        android:id="@+id/comments_likes_text"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_level4"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"/>

                    </RelativeLayout>
-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:id="@+id/comments_bottom_layout"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_alignParentBottom="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/gray"
                    android:layout_alignParentTop="true"/>
                <com.dsquare.hibour.utils.ProximaEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/comments_edit_text"
                    android:hint="Write here..."
                    android:layout_marginLeft="@dimen/dp_5"
                    android:isScrollContainer="true"/>
                    <Button
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/brand"
                        android:text="send"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/dp_10"
                        android:id="@+id/comments_sumbit"
                        />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/comments_top_layout"
                android:id="@+id/comments_post">
                <com.dsquare.hibour.utils.Proxima
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:id="@+id/comments_message"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/feeds_image_height"
                    android:id="@+id/comments_image"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:elevation="@dimen/dp_2"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:scrollbars="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/comments_post_list"
                android:layout_above="@id/comments_bottom_layout"
                android:layout_below="@id/comments_post">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/comments_bottom_layout"
                android:visibility="gone"
                android:id="@+id/no_comments_layout"
                android:layout_below="@id/comments_post">
                <com.dsquare.hibour.utils.ProximaLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/text_size_level2"
                    android:text="Be the first one to comment on this..."/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

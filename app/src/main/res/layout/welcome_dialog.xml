<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
    <com.dsquare.hibour.utils.Proxima
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/dp_25"
        android:textColor="@color/black_1"
        />

        <com.dsquare.hibour.utils.Proxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hibour"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_25"
            android:textColor="@color/black_1"/>

        <com.dsquare.hibour.utils.Proxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_hope_you"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray"/>
        <com.dsquare.hibour.utils.Proxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_to_know"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/gray"
           />
        <com.dsquare.hibour.utils.Proxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_nbours"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/gray"
           />

        <Button
            android:id="@+id/welcome_dialog_hi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/say_hi"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/brand"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>

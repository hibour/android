<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsquare.hibour.activities.SearchInChats">

    <RelativeLayout
        android:id="@+id/feeds_search_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/newbrand">

        <ImageView
            android:id="@+id/feeds_search_back"
            android:layout_width="@dimen/app_bar_icon_size"
            android:layout_height="@dimen/app_bar_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/ic_back_gray"/>

        <RelativeLayout
            android:id="@+id/home_search_layout"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_35"
            android:layout_centerInParent="true"
            android:background="@drawable/loc_search_rectangle"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <AutoCompleteTextView
                android:id="@+id/home_search_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center"
                android:hint="search.."
                android:textColor="@color/black_1"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/edit_text_size"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/feeds_search_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ic_search_white"/>
    </RelativeLayout>

    <View
        android:id="@+id/posts_appbar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horiz_line_height"
        android:layout_below="@+id/feeds_search_app_bar"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feeds_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/posts_appbar_line"
        android:background="@android:color/white"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
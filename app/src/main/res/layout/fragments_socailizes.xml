<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
             android:background="@android:color/white"
    tools:context="com.dsquare.hibour.activities.SocialCategories">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/newbrand">
            <com.dsquare.hibour.utils.Proxima
                android:id="@+id/invite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:clickable="true"
                android:contentDescription="Invite"
                android:text="@string/invite"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <com.dsquare.hibour.utils.ProximaExtraBold
                android:id="@+id/home_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/home_fragment_title"
                android:textColor="@color/white"
                android:textSize="@dimen/app_bar_title_text_size"/>
            <RelativeLayout
                android:id="@+id/home_search_layout"
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_35"
                android:layout_centerInParent="true"
                android:background="@drawable/loc_search_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/home_search_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="search neighbours"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/edit_text_size"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/home_search_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/ic_search_white"/>
        </RelativeLayout>
        <View
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horiz_line_height"
            android:layout_below="@+id/home_app_bar"
            android:background="@color/newbrand"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/views"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/socialize_title_layout">
            <com.dsquare.hibour.utils.ProximaExtraBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Suggest a Headline"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_level2"/>
            <com.dsquare.hibour.utils.ProximaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/title1"
                android:text="Start connecting with people who"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_level4"/>
            <com.dsquare.hibour.utils.ProximaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title2"
                android:layout_below="@id/title1"
                android:text="shares similar interests"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_level4"/>
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/socialize_title_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/social_prefs_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@android:color/white"
                    android:visibility="visible">
                    </android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/social_prefs_list1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:visibility="visible">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>




    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/fab_govt_radius"
        android:layout_height="@dimen/fab_govt_radius"
        android:layout_marginLeft="@dimen/fab_govt_left_margin"
        android:layout_marginTop="@dimen/fab_govt_top_margin1"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_star"
        android:visibility="gone"
        app:backgroundTint="@android:color/white">
    </android.support.design.widget.FloatingActionButton>
</FrameLayout>
</android.support.design.widget.CoordinatorLayout>
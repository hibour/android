<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@null</item>
    </style>
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/gray</item>
    </style>
    <style name="BrandTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/brand_status_bar</item>
        <item name="android:editTextBackground">@null</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorAccent">@color/gray</item>
    </style>
    <style name="ThemeTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MaterialDesignStyle" parent="MD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
